<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:E_Shop.Resources">

    <SolidColorBrush x:Key="btn-color-primary" Color="AliceBlue"/>
    <SolidColorBrush x:Key="btn-color-secondary" Color="#FF00D1FF"/>

    
    <Style TargetType="UserControl" x:Key="login-view">
        <Setter Property="Background" Value="AliceBlue" />
    </Style>

    <Style TargetType="Button" x:Key="btn-primary">
        <Setter Property="Background" Value="#FF00D1FF" />
    </Style>
</ResourceDictionary>